{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CommonItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "url"
      ]
    },
    "MenuItem": {
      "anyOf": [
        {
          "$ref": "#/definitions/CommonItem"
        },
        {
          "type": "object",
          "properties": {
            "identifier": {
              "type": "string",
              "const": "theme-switcher"
            }
          },
          "required": [
            "identifier"
          ]
        }
      ]
    },
    "Share": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "boolean"
        },
        "shareOnTwitter": {
          "type": "boolean"
        },
        "shareOnFacebook": {
          "type": "boolean"
        },
        "shareOnLinkedIn": {
          "type": "boolean"
        },
        "shareOnTelegram": {
          "type": "boolean"
        },
        "shareOnWeibo": {
          "type": "boolean"
        },
        "shareOnDouban": {
          "type": "boolean"
        },
        "shareOnQQ": {
          "type": "boolean"
        },
        "shareOnQzone": {
          "type": "boolean"
        },
        "shareViaQRCode": {
          "type": "boolean"
        }
      }
    },
    "ConfigSchema": {
      "type": "object",
      "properties": {
        "menu": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MenuItem"
          }
        },
        "displayPoweredBy": {
          "type": "boolean"
        },
        "favicon": {
          "type": "string"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "motto": {
              "type": "string"
            },
            "avatar": {
              "type": "string"
            },
            "website": {
              "type": "string"
            },
            "twitter": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ]
        },
        "siteLogo": {
          "type": "string"
        },
        "siteDescription": {
          "type": "string"
        },
        "siteCreated": {
          "type": "string"
        },
        "share": {
          "$ref": "#/definitions/Share"
        },
        "comment": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "waline"
            },
            "serverURL": {
              "type": "string"
            },
            "meta": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "nick",
                  "mail",
                  "link"
                ]
              }
            },
            "requiredMeta": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "nick",
                  "mail",
                  "link"
                ]
              }
            },
            "wordLimit": {
              "anyOf": [
                {
                  "type": "number"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              ]
            },
            "pageSize": {
              "type": "number"
            },
            "lang": {
              "type": "string"
            },
            "commentSorting": {
              "type": "string",
              "enum": [
                "latest",
                "oldest",
                "hottest"
              ]
            },
            "emoji": {
              "anyOf": [
                {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "folder": {
                            "type": "string"
                          },
                          "prefix": {
                            "type": "string"
                          },
                          "type": {
                            "type": "string"
                          },
                          "icon": {
                            "type": "string"
                          },
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": [
                          "name",
                          "icon",
                          "items"
                        ]
                      }
                    ]
                  }
                },
                {
                  "type": "boolean",
                  "const": false
                }
              ]
            },
            "login": {
              "type": "string",
              "enum": [
                "enable",
                "disable",
                "force"
              ]
            },
            "copyright": {
              "type": "boolean"
            },
            "recaptchaV3Key": {
              "type": "string"
            },
            "reaction": {
              "anyOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                {
                  "type": "boolean"
                }
              ]
            }
          },
          "required": [
            "type",
            "serverURL"
          ]
        },
        "grayFilter": {
          "type": "boolean"
        }
      },
      "required": [
        "menu",
        "displayPoweredBy",
        "favicon",
        "author",
        "siteLogo",
        "siteDescription",
        "siteCreated",
        "share",
        "comment"
      ]
    }
  },
  "properties": {
    "menu": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/MenuItem"
      }
    },
    "displayPoweredBy": {
      "type": "boolean"
    },
    "favicon": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "motto": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "siteLogo": {
      "type": "string"
    },
    "siteDescription": {
      "type": "string"
    },
    "siteCreated": {
      "type": "string"
    },
    "share": {
      "$ref": "#/definitions/Share"
    },
    "comment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "waline"
        },
        "serverURL": {
          "type": "string"
        },
        "meta": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "nick",
              "mail",
              "link"
            ]
          }
        },
        "requiredMeta": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "nick",
              "mail",
              "link"
            ]
          }
        },
        "wordLimit": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "pageSize": {
          "type": "number"
        },
        "lang": {
          "type": "string"
        },
        "commentSorting": {
          "type": "string",
          "enum": [
            "latest",
            "oldest",
            "hottest"
          ]
        },
        "emoji": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "folder": {
                        "type": "string"
                      },
                      "prefix": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      },
                      "icon": {
                        "type": "string"
                      },
                      "items": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "name",
                      "icon",
                      "items"
                    ]
                  }
                ]
              }
            },
            {
              "type": "boolean",
              "const": false
            }
          ]
        },
        "login": {
          "type": "string",
          "enum": [
            "enable",
            "disable",
            "force"
          ]
        },
        "copyright": {
          "type": "boolean"
        },
        "recaptchaV3Key": {
          "type": "string"
        },
        "reaction": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "boolean"
            }
          ]
        }
      },
      "required": [
        "type",
        "serverURL"
      ]
    },
    "grayFilter": {
      "type": "boolean"
    }
  }
}