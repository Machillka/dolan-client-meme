{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ConfigSchema",
  "properties": {
    "title": {
      "type": "string"
    },
    "menu": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "url"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "identifier": {
                "type": "string",
                "const": "theme-switcher"
              }
            },
            "required": [
              "identifier"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "displayPoweredBy": {
      "type": "boolean"
    },
    "siteCreated": {
      "type": "string"
    }
  }
}